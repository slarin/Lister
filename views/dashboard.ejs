<style>
  
p {
  color: #707070;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.dash-header {
  height: 25vh;
  width: auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.name {
  color: #ffffff;
  background: linear-gradient(60deg, #d4418e 0%, #0652c5 100%);
  border-radius: 0 60px 60px 0;
  width: 50vw;
  height: inherit;
  box-shadow: rgba(0, 0, 0, 0.144) 2px 6px 6px;
  display: flex;
  justify-content: flex-start;
  padding: 0 20px;
  align-items: center;
}
.name>p {
  font-size: 2.7rem;
  font-family: 'Neucha', cursive;
  align-self: center;
  color: #ffffff;
}
.avatar-hldr {
  width: 30vw;
  height: inherit;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}
.avatar {
  border-radius: 10%;
  width: 20vw;
  height: auto;
  box-shadow: rgba(0, 0, 0, 0.144) 0 3px 6px;
}

.dash-body {
  margin: 60px 240px;
  display: flex;
  flex-flow: column nowrap;
}
.body>p {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 20px;
  text-align: left;
}
.counter {
  display: flex;
  flex-direction: row nowrap;
  justify-content: space-between;
  margin: 0 50px;
}
.box {
  width: 190px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 20px;
  text-align: center;
}
.number {
  font-size: 60px;
  font-weight: bold;
  margin-bottom: -5px;
}

.dash-footer {
  margin: 150px 5vw 10px 5vw;
  height: 10vh;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}
.btn {
  height: 34px;
  border: none;
  border-radius: 10px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 20px;
  box-shadow: rgba(0, 0, 0, 0.144) 0 3px 3px;
  width: 250px;
  cursor: pointer;
}
.red {
  background-color: #FF1616;
  color: #ffffff;
  margin-right: 10vw;
}
.red:hover { background-color: #fd0101; }
.green {
  background-color: #0EF13B;
  color: #ffffff;
  margin-right: 10vw;
}
.green:hover { background-color: #01ff34; }
.white {
  background-color: #ffffff;
}
.white:hover { background-color: #f5f5f5; }


@media(min-width: 1300px) {
  .dash-body{
    margin: 60px 280px;
  }
  .counter {
    margin: 0 80px;
  }
}

@media(max-width: 800px) {
  .avatar-hldr {
    width: 45vw;
  }
  .avatar {
    width: 18vw;
    height: 20vh;
    align-self: center;
  }
  .dash-body {
    margin: 60px;
  }
  .counter {
    margin: 0 20px;
  }
  .dash-footer {
    margin: 150px 5px 0 5px;
  }
  .btn {
    width: 160px;
  }
}

@media(max-width: 500px) {
  .name>p {
    font-size: 1.5rem;
  }
  .avatar-set { font-size: 0.4rem; }
  .dash-body { margin: 60px 30px; }
  .counter { margin: 10px; }
  .box { width: 160px; }
  .dash-footer { margin: 70px 5px 0 5px; }
  .btn { font-size: 12px; }
}
</style>



<div class="container">
  <div class="dash-header">
    <div class="name">
      <p>Hi, <%= name %></p>
    </div>
    <div class="avatar-hldr">
      <div class="avatar"></div>
    </div>
  </div>
  <div class="dash-body">
    <p>Countdown to our first Beta test</p>
    <div class="counter">
      <div class="box">
        <p class="number" id="days">02</p>
        <p id="dayer">days</p>
      </div>
      <div class="box">
        <p class="number" id="hours">02</p>
        <p id="hourer">hours</p>
      </div>
      <div class="box">
        <p class="number" id="minutes">02</p>
        <p id="minuter">minutes</p>
      </div>
    </div>
  </div>
  <div class="dash-footer">
    <button class="btn red" onclick="window.location.href='/users/logout'">opt out</button>
    <button class="btn green" onclick="window.location.href='/faq'">learn more</button>
    <button class="btn white" onclick="window.location.href='/invest'">invest</button>
  </div>
</div>